{
  "compilerOptions": {
    "target": "es2022",
    "module": "node18",        
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "rootDir": "./src",                   
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node16"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]                  
}
